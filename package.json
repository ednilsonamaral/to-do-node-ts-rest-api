{
  "name": "to-do-node-ts-rest-api",
  "version": "1.0.0",
  "description": "A simple REST API with Nodejs, Typescript, PostgreSQL, Docker",
  "author": "Ednilson Amaral <ednilsonamaral.ti@gmail.com>",
  "license": "MIT",
  "main": "server.js",
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "express",
    "postegresql",
    "unit",
    "tests"
  ],
  "engines": {
    "node": ">=16.16.0"
  },
  "scripts": {
    "start": "ts-node --transpile-only src/server.ts",
    "build": "tsc",
    "dev": "nodemon --watch src --delay 1 --exec 'ts-node' src/server.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http": "^0.0.1-security",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.8.4",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typeorm": "^0.3.12",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "tslint": "^6.1.3"
  }
}
